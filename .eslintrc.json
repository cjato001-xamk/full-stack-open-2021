{
  "root": true,
  "rules": {
    "indent": ["error", 2],
    "eqeqeq": "error",
    "object-curly-spacing": ["error", "always"],
    "arrow-spacing": ["error", { "before": true, "after": true }],
    "no-console": "warn",
    "no-warning-comments": "warn",
    "no-unused-vars": "warn",
    "quotes": ["error", "single"],
    "spaced-comment": "warn",
    "@typescript-eslint/no-explicit-any": "warn",
    "@typescript-eslint/explicit-function-return-type": "warn"
  }
}
